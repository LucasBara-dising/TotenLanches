        <!-- Home -->
        <a href="/"><img src="imagens/casa.png" class="imgCarrinho" id="btn-home"/></a>
      </div>

      <div class="row choose text-center" id="chooser">
          <a  class="col-4">
            <img class="iconCategoria" id="iconHamburger" src="imagens/bread.png" alt="">
            <div class="barra" id="barraIconHamburger"></div>
          </a>
          <a id="iconBebida" class="col-4">
            <img class="iconCategoria" src="imagens/refrigerante.png" alt="">
            <div class="barra" id="barraIconBebida"></div>
