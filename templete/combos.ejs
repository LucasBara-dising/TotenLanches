<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Monte seu Lanche</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="public/css/styleMonteSeuLanche.css">
    <link rel="stylesheet" type="text/css" href="public/css/styleGeral.css">
</head>
  <body>

    <!-- Modal -->
    <div class="modal" id="ModalCarrinho" tabindex="-1"  aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content" id="content-Carrinho">
          <div class="modal-header text-center">
              <h1 class="modal-title">Carrinho</h1>
              <button type="button" id="btn-close" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>

          <div class="modal-body">
          <p class="carrinhoTitle">
              Hamburguer
              <p class="ps-4" id="lancheIngredintes"></p>
          </p>
          <p class="carrinhoTitle">
            Bebida
            <p class="ps-4" id="cartItemsBebida"></p>
          </p>

          <p class="carrinhoTitle">
            Acompanhamento
            <p class="ps-4" id="cartItemsAcompanhamento"></p>
          </p>

          </div>
          <div class="modal-footer">
              <p class="carrinhoTitle text-center" id="totalPrice">Total: R$0.00</p>
              <a type="button" class="btn fw-bold" id="btnOKModel">OK</a>

              <form id="cartItemsForm" action="/" method="POST">
                <!-- Esse input receberá selectedItemsJSON gerado em .JS -->
                <input type="hidden"  id="inputselectedItems" name="selectedItems" value="[]">
                <a type="button" href="total_a_pagar.html" class="btn fw-bold" id="btnOKConfirma">Confirmar</a>
             </form>   
          </div>
      </div>
      </div>
  </div>
    
    <!-- background -->
    <div class="background">
      <div class="d-flex justify-content-between">
        <!-- Button trigger modal -->
        <img src="imagens/carrinho-de-compras.png" class="imgCarrinho" id="btn-open-carrinho" data-bs-toggle="modal" data-bs-target="#ModalCarrinho"/>
        <!-- Home -->
        <a href="/"><img src="imagens/casa.png" class="imgCarrinho" id="btn-home"/></a>
      </div>

      <div class="row choose text-center">
          <a  class="col-4">
            <img class="iconCategoria" id="iconHamburger" src="imagens/bread.png" alt="">
            <div class="barra" id="barraIconHamburger"></div>
          </a>
          <a id="iconBebida" class="col-4">
            <img class="iconCategoria" src="imagens/refrigerante.png" alt="">
            <div class="barra" id="barraIconBebida"></div>
          </a>
          <a id="iconAcompanhamento" class="col-4">
            <img class="iconCategoria" src="imagens/batatas-fritas.png" alt="">
            <div class="barra" id="barraIconAcompanhamento"></div>
          </a>
      </div>
    </div>
    <!-- Fim background -->
   
    <!-- Modal -->
    <div class="containerPedido">
      <!-- Hamburger -->
      <div class="conteinerLanche">
        <p class="fs-1 fw-bold text-center">Escolha seu Combo</p>
        <!-- --------Hambuerger-->
        <div class="container mt-2">
          <p class="title-item">Hambuerger</p>
          <div class="row gx-5" id="conteinerHambuerger"></div>
        </div>
        
        <!-- -------------- Salcicha ---------------->
        <div class="container mt-3" >
          <p class="title-item">Salsicha </p>
          <div class="row gx-5" id="conteinerSalsicha"></div>            
        </div>    
        
        <!-- -------------- Veg ---------------->
        <div class="container mt-5">
          <p class="title-item">Vegetariano </p>
          <div class="row gx-5" id="conteinerVegetariano"></div>
        </div>
  
        <!-- Bnt ok -->
        <div class="text-center">
          <button type="button" class="btn fw-bold btnOK mt-5" id="btnOKCombo">OK</button>
        </div>
      </div>

      <!-- Bebida -->
      <div class="conteinerBebida">
        <p class="fs-1 fw-bold text-center">Escolha sua bebida</p>
        <!-- --------- SUCOS NATURAIS ----------->
        <div class="container mt-2">
          <p class="title-item">
            Sucos Naturais de 500ml 
            <p class="fs-3">R$8.90</p>
          </p>
          
          <div class="row gx-5" id="conteinerSucos"></div>
        </div>
          
        <!-- -------------- REFRIGERANTES ---------------->
        <div class="container mt-3" >
          <p class="title-item">
            Refrigerantes 
            <p class="fs-5">R$5.90</p>
          </p>
          
          <div class="row gx-5" id="conteinerRefri"></div>            
        </div>    
          
        <!-- -------------- ÁGUA ---------------->
        <div class="container mt-5">
          <p class="title-item">
            Água 500ml 
            <p class="fs-5">R$4.00</p>
          </p>
          
          <div class="row gx-5" id="conteinerAgua"></div>
        </div>
        
        <!-- Bnt ok -->
        <div class="text-center mt-5">
          <a>
            <button type="button" class="btn fw-bold btnOK" id="btnOKBebida">OK</button>
          </a>
        </div>
      </div>

      <!-- Acompanhamento -->
      <div class="conteinerAcompanhamento">
        <p class="title-item fs-1 fw-bold text-center">Escolha seu acompanhamento</p>
        <!-- --------- Grande -->
        <div class="container mt-2">
          <p class="title-item">
            Grande
            <p class="fs-3">R$+2.90</p>
          </p>
        
          <div class="row gx-5" id="conteinerGrande"></div>    
        </div>
      
        <!-- -------------- Medio ---------------->
        <div class="container mt-3" >
         <p class="title-item">
            Medio 
            <p class="fs-5">R$+0.90</p>
         </p>
        
          <div class="row gx-5" id="conteinerMedio"></div> 
        </div>
      
        <!-- -------------- Pequeno ---------------->
        <div class="container mt-5">
          <p class="title-item">
            Pequeno
            <p class="fs-5">R$0.0</p>
          </p>
          <div class="row gx-5" id="conteinerPequeno"></div>
        </div>
        
        <!-- -------------- Especial ---------------->
        <div class="container mt-5">
          <p class="title-item">
            Especial
            <p class="fs-5">R$+5.90</p>
          </p>
        
          <div class="row gx-5" id="conteinerEspecial"></div>
        </div>
      
      
        <!-- Bnt ok -->
        <div class="text-center mt-5">
          <a>
            <button type="button" class="btn fw-bold" id="btnDenovo">Mais um</button>
          </a>
          <a>
            <button type="button" class="btn fw-bold btnOK" id="btnOKFinal">Finalziar</button>
          </a>
        </div>
      </div>
    </div>

    <!-- footer total -->
    <div class="fixed-bottom row" id="footerTotal">
      <div class="col-6 text-start fs-2 fw-bold">Total</div>
      <div class="col-6 text-end fs-2" id="txtTotal">R$: 0.0</div>
    </div>

    
  </body>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.2.1/js/bootstrap.min.js"></script>
  <script src="public/js/loadAcompanha.js"></script>
  <script src="public/js/loadBebidas.js"></script>
  <script src="public/js/loadCombos.js"></script>
  <script src="public/js/criaJsonGeral.js"></script>
  <script src="public/js/routes.js"></script>
</html>